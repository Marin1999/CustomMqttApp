<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Light grey background for disabled -->
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#A0A0A0" />

            <padding
                android:left="20dp"
                android:right="20dp"
                android:top="10dp"
                android:bottom="10dp" /><!-- Grey border for disabled -->
        </shape>
    </item>

    <!-- Enabled state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White background for enabled -->
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#000000" /> <!-- Black border for enabled -->
        </shape>
    </item>
</selector>
