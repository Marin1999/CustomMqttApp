<!-- res/drawable/rounded_edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the EditText -->
    <solid android:color="#FFFFFF" /> <!-- Change color as needed -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" /> <!-- Adjust the radius as needed -->

    <!-- Optional: Border around the EditText -->
    <stroke
        android:width="2dp"
        android:color="#000000" /> <!-- Change border color if needed -->

    <!-- Optional: Padding inside the EditText -->
    <padding
        android:left="20dp"
        android:right="20dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>
