<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/home_Fragment">

    <fragment
        android:id="@+id/home_Fragment"
        android:name="com.example.myapplication.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_Fragment_to_customPreferenceFragment"
            app:destination="@id/customPreferenceFragment" />
    </fragment>
    <fragment
        android:id="@+id/customPreferenceFragment"
        android:name="com.example.myapplication.fragments.CustomPreferenceFragment"
        android:label="CustomPreferenceFragment" >
        <action
            android:id="@+id/action_customPreferenceFragment_to_home_Fragment"
            app:destination="@id/home_Fragment" />
    </fragment>
</navigation>